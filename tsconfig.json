        "lib": ["ES2020"],
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./lib",
        "baseUrl": "./",
        "strictPropertyInitialization": false
