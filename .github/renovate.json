{
    "baseBranches": ["dev"],
    "postUpdateOptions": ["npmDedupe"],
    "rollbackPrs": true,
    "labels": ["dependencies"],
    "lockFileMaintenance": { "enabled": true },
    "prCreation": "not-pending",
    "packageRules": [
        {
            "matchPackagePatterns": "^@types/",
            "groupName": "Definitely typed"
        },
        {
            "matchPackagePatterns": [
                "^eslint",
                "^@typescript-eslint/"
            ],
            "groupName": "ESLint"
        },
        {
            "matchPackagePatterns": "jest",
            "groupName": "Jest"
        }
    ]
}

