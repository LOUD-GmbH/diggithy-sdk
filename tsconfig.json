{
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "strictPropertyInitialization": false
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
